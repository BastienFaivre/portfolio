{
    "name": "Node.js Development Environment",
    "image": "node:latest",
    "workspaceFolder": "/app",
    "workspaceMount": "source=${localWorkspaceFolder},target=/app,type=bind",
    "forwardPorts": [
        4321
    ],
    "postCreateCommand": "/app/setup.sh",
    "customizations": {
        "vscode": {
            "extensions": [
                "astro-build.astro-vscode",
                "gitHub.copilot"
            ]
        }
    }
}